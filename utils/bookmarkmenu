#!/usr/bin/env bash

urls=(
    "https://rarbg.to"
    "https://odysee.com"
    "https://fontawesome.com/cheatsheet"
    "https://envs.net"
    "https://jonasjacek.github.io/colors/"
)

prompt="ï€® bookmarks:"
dmenu_cmd="dmenu -lh 26 -fn monospace:size=12 -l 5 -c -i"

url=$(printf '%s\n' "${urls[@]}" | $dmenu_cmd -p "$prompt" "$@")

# exit if the user did not pick a url
[[ -n $url ]] || exit

xdg-open "$url"
